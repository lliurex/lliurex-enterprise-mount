#!/bin/sh
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

PACKAGE_NAME="lliurex-enterprise-mount"
case "$1" in
    configure)

                ORIGINAL_FILE="/etc/pam.d/lightdm"
                LLIUREX_FILE="/etc/pam.d/lightdm.lliurex"
                NEW_FILE="/etc/pam.d/lightdm.diverted"
                if [ ! -r "$NEW_FILE" ] ; then
			dpkg-divert --package $PACKAGE_NAME --rename  --add --divert  $NEW_FILE  $ORIGINAL_FILE
		fi

		if [ ! -L $ORIGINAL_FILE ] ; then
			if [ "$(readlink -f $ORIGINAL_FILE)" != "${LLIUREX_FILE}"  ] ; then
				rm -rf $ORIGINAL_FILE || true
				ln -fs ${ORIGINAL_FILE}.lliurex $ORIGINAL_FILE
			fi
		fi

                ORIGINAL_FILE="/usr/share/pam-configs/libpam-mount"
                NEW_FILE="/usr/share/llx-pam-configs/diverted/libpam-mount.diverted"
                if [ ! -r "$NEW_FILE" ] ; then
			dpkg-divert --package $PACKAGE_NAME --rename  --add --divert  $NEW_FILE  $ORIGINAL_FILE
		fi
                ORIGINAL_FILE="/usr/share/pam-configs/pam_script"
                NEW_FILE="/usr/share/llx-pam-configs/diverted/pam_script.diverted"
                if [ ! -r "$NEW_FILE" ] ; then
			dpkg-divert --package $PACKAGE_NAME --rename  --add --divert  $NEW_FILE  $ORIGINAL_FILE
		fi

                ORIGINAL_FILE="/etc/security/pam_mount.conf.xml"
                NEW_FILE="/etc/security/pam_mount.conf.xml.diverted"

                if [ ! -r "$NEW_FILE" ] ; then
                        dpkg-divert --package $PACKAGE_NAME --rename  --add --divert  $NEW_FILE  $ORIGINAL_FILE
                fi

		if [ ! -L $ORIGINAL_FILE ] ; then
			if [ "$(readlink -f $ORIGINAL_FILE)" != "${LLIUREX_FILE}"  ] ; then
				rm -rf $ORIGINAL_FILE || true
				ln -fs ${ORIGINAL_FILE}.lliurex $ORIGINAL_FILE
			fi
		fi

		ORIGINAL_FILE="/opt/pbis/share/pbis.pam-auth-update"
                LLIUREX_FILE="/opt/pbis/share/pbis.pam-auth-update.lliurex"
                NEW_FILE="/opt/pbis/share/pbis.pam-auth-update.diverted"
                if [ ! -r "$NEW_FILE" ] ; then
			dpkg-divert --package $PACKAGE_NAME --rename --add --divert  $NEW_FILE  $ORIGINAL_FILE
		fi

		if [ ! -L $ORIGINAL_FILE ] ; then
			if [ "$(readlink -f $ORIGINAL_FILE)" != "${LLIUREX_FILE}"  ] ; then
				rm -rf "$ORIGINAL_FILE" || true
				ln -fs "$LLIUREX_FILE" "$ORIGINAL_FILE"
			fi
		fi


		pam-auth-update --package
		
		update-icon-caches /usr/share/icons/hicolor || true
		
		

    ;;



    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
